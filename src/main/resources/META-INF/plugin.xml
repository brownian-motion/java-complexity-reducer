<idea-plugin>
    <id>com.brownian.plugins.intellij.complexity</id>
    <name>Complexity reducer</name>
    <vendor email="jack.brown.255+brownian-motion@gmail.com">JJ Brown</vendor>

    <description>
        Provides tools for reducing complexity of Java methods,
        and hints to help notice that creep before it gets bad.
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.brownian.plugins.intellij.complexity.markers.CyclomaticComplexityLineMarker"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>