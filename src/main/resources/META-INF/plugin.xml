<idea-plugin>
    <id>com.brownian.plugins.intellij.complexity</id>
    <name>Complexity Tools</name>
    <vendor email="jack.brown.255+brownian-motion@gmail.com">JJ Brown</vendor>

    <description>
        Provides hints to help notice the creep of complexity in Java methods before it gets bad.
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->b
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.brownian.plugins.intellij.complexity.markers.CyclomaticComplexityLineMarker"/>

        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.brownian.plugins.intellij.complexity.markers.NPathComplexityLineMarker"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>